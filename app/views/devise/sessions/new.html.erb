<body style="background-image: url('https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885__480.jpg');background-repeat:no-repeat;background-size: cover">
<div class="container">
<div class="row d-flex justify-content-center">
  <div class="col-md-6 ">


<%= form_for(resource, as: resource_name ,url: session_path(resource_name)) do |f| %>

<div class="card mt-4 border shadow-lg text-white p-4 " style="background-color: #3b383d;border-radius: 20px;background: transparent">
  <div class="card-body">
    <h1>Sign in </h1>

  <div class="mb-3">
    <%= f.label :email  ,class: "form-label"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password  ,class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me, class: "form-check" %>
      <%= f.label :remember_me ,class: "form-label"%>
    </div>
  <% end %>

<%= f.submit :Login, class: 'actions btn btn-outline-light', data: { turbolinks: true } %>

  </div>
</div>
      <%= render "devise/shared/links" %>
<% end %>

</div>
</div>
</div>

</body>>