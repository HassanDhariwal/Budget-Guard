<% @account.errors.full_messages_for(:name).each do |message| %>
  <div><%= message %></div>
<% end %>
<div class="row justify-content-center">
<div class="col-md-4 border rounded p-4 bg-success text-white shadow-lg">
<%= form_for  @account do |form|  %>
    <h5 style="text-align: center"> <%= type %> Account</h5>

  <div class="form-group mb-3">
    <%= form.label :name %><br>
    <%= form.text_field :name, placeholder: "Enter your Name" ,class: 'form-control' %>
  </div>

  <div class="form-group ">
    <%= form.label :account_type %><br>
    <%= form.text_field :account_type, placeholder: "Account Type",class: 'form-control mt-2 mb-2'  %>
  </div>

  <div class="form-group mt-3 mb-3">
    <%= form.label :starting_balance  ,class: 'mt-2'%><br>
    <%= form.text_field :amount, placeholder: "Amount",class: 'form-control' %>
  </div>

  <div>
    <%= form.number_field :user_id, value: current_user.id, type: :hidden %>
  </div>
    <div class="text-center">
      <button type="submit" class="btn btn-block mt-2 btn-outline-warning"> <%= type=="Edit"? "Update" : "Create" %> Account</button>
    </div>
<!--  <button type="submit" class="btn mt-4 btn-primary">  <%#= type %> Account </button>-->
<% end %>
</div>
</div>