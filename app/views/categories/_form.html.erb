<h1>New Category</h1>

<%= form_for @category do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name,placeholder: "Enter a Name "%>
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
  <% end %>
  </div>

  <button type="submit" class="btn btn-primary"><%= type %> Update Category</button>
<% end %>
