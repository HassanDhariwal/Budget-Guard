<h1>Category</h1>

<%= link_to "New category", new_category_path , class:"btn btn-primary"%>

<table class="table table-hover" >
  <thead class="table-dark">
    <tr>
      <th scope="col" width='10%'>ID</th>
      <th scope="col" width='10%'>Name</th>
      <th scope="col" width='10%'>Action</th>
    </tr>
  </thead>

  <% @categories.each do |category| %>
    <tbody>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
      <td>
        <%= link_to "Show", category_path(category.id), class: "btn btn-success" %>
        <%= link_to "Edit",edit_category_path(category.id), class: "btn btn-primary" %>
        <%= link_to "Delete", category_path(category.id), class: "btn btn-danger" ,data: {
            turbo_method: :delete, turbo_confirm: "Are you sure?"}, :method => :delete %>
      </td>
    </tbody>
  <% end %>
</table>

