<body style="background-image: url('https://cdn.pixabay.com/photo/2021/03/13/04/11/touch-screen-6091015_960_720.jpg');background-repeat:no-repeat;background-size: cover">
<h3>Recodes</h3>

<table class="table table-success">
  <thead class="table-dark">
      <tr>
         <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
  </thead>

  <tbody>
     <td><%= @category.name %></td><td>
       <%= link_to "Edit",edit_category_path(@category.id), class: "btn btn-primary" %>
       <%= link_to "Delete", category_path(@category.id), class: "btn btn-danger" ,data: {
           turbo_method: :delete, turbo_confirm: "Are you sure?"}, :method => :delete %>
     </td>

  </tbody>
</table>
<style>
    tr:hover {
        background-color:antiquewhite;
    }
</style>

<table class="table table-hover table-light">
  <thead class="table table-dark	">
  <tr>
    <th scope="col">ID</th>
    <th scope="col">Recode_type</th>
    <th scope="col">Amount</th>
    <th scope="col">Account</th>
    <th scope="col">Category</th>
    <th scope="col">Date Time</th>
    <th scope="col">Note</th>
    <th scope="col">Action</th>
  </tr>
  </thead>
  <% @recodes.each do |recode| %>
    <div class="field">
      <!--    <#= link_to account.name, account %>-->
      <!--    #how to link href  -->
      <tbody>
      <tr>
        <th scope="row"><%= recode.id  %></th>
        <td><%= recode.recode_type %></td>
        <td><%= recode.amount %></td>
        <td><%= recode.account_id %></td>
        <td><%= recode.category_id %></td>
        <td><%= recode.date_time&.strftime('%B %e at %l:%M %p')%></td>
        <td><%= recode.note %></td>
        <!--      here we define account.id and bacause this provide to edit and delete -->
        <td>
          <%= link_to "Show", recode_path(recode.id), class: "btn btn-success" %>
          <%= link_to "Edit", edit_recode_path(recode.id), class: "btn btn-primary" %>
          <%= link_to "Delete", recode_path(recode.id), class: "btn btn-danger" ,data:
              { turbo_method: :delete, turbo_confirm: "Are you sure?"}, :method => :delete %>
        </td>
      </tr>
      </tbody>
    </div>
  <% end %>
</table>
</body>