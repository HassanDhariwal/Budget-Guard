<h1>Recode</h1>

<%= form_for  @recode do |form| %>

  <div class="header" >
    <%= form.radio_button :recode_type, 'income',:checked => true %>
    <%= form.label :recode_type, 'income' %>
    <%= form.radio_button :recode_type, 'expence' %>
    <%= form.label :recode_type, 'expence' %>
  </div>

  <div>
    <%= form.label :choose_account %><br>
    <%= form.collection_select :account_id, @accounts.order(:name),:id,:name%>
  </div>

  <div>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :date_time %><br>
    <%= form.datetime_field :date_time %>
  </div>

  <div>
    <%= form.label :category %><br>
      <%= form.text_field :category %>
  </div>
<div>
    <%= form.label :note %><br>
      <%= form.text_field :note %>
  </div>


  <div type="button" class="btn btn-success">
    <%= form.submit %>
  </div>
<% end %>
