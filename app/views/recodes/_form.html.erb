<h1>Recode</h1>

<%= form_for  @recode do |form| %>

  <div class="header" >
    <%= form.radio_button :recode_type, 'income',:checked => true %>
    <%= form.label :recode_type, 'income' %>
    <%= form.radio_button :recode_type, 'expence' %>
    <%= form.label :recode_type, 'expence' %>
  </div>

  <div>
    <%= form.label :choose_account %><br>
    <%= form.collection_select :account_id, @accounts.order(:name),:id,:name, include_blank: 'None'%>
  </div>

  <div>
    <%= form.label :choose_category %><br>
    <%= form.collection_select :category_id, @categories.order(:name),:id,:name, include_blank: 'None' %>
  </div>

  <div>
    <%= form.label :amount %><br>
    <%= form.text_field :amount, placeholder: "Amount" %>
  </div>

  <div>
    <%= form.label :date_time %><br>
    <%= form.datetime_field :date_time, placeholder: "Date Time" %>
  </div>

  <div>
    <%= form.label :note %><br>
      <%= form.text_field :note , placeholder: "Note" %>
  </div>
  <button type="submit" class="btn btn-primary"> <%= type %> Recorde</button>
<% end %>
